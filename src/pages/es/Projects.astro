---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Card from "@components/Card.astro";
import Footer from "@components/Footer.astro";
import { getCollection } from "astro:content";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);

const posts = (await getCollection("projects")).sort(
    (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<Layout title={translation("projects.title")}>
    <Header />
    <section>
        <h1>{translation("projects.title")}</h1>
        <div>
            {
                posts.map((post) => (
                    <Card
                        title={post.data.title}
                        tags={post.data.tags}
                        slug={post.slug}
                        body={post.data.body}
                    />
                ))
            }
        </div>
    </section>
    <Footer />
</Layout>
<style>
    section {
        display: flex;
        justify-content: space-evenly;
        margin: 0 calc(100% - 88%);
        background-color: rgb(30, 27, 31, 0.8);
        border-radius: 0 0 0.8rem 0.8rem;
        color: rgb(178, 179, 180);
        height: 100%;
        flex-direction: column;
        padding: 10rem 4rem;
        gap: 5rem;
        box-shadow: inset 0 0 30px rgba(255, 255, 255, 0.1);
    }
    h1 {
        display: grid;
        color: rgb(178, 179, 180);
        font-size: 4rem;
    }
    h2 {
        display: inline-block;
    }
    div {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(32ch, 1fr));
        gap: 2rem;
    }
    li {
        list-style: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1px;
        color: rgb(178, 179, 180);
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 50%;
        transition: background-position 2s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }
    li > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: rgb(178, 179, 180);
        opacity: 0.8;
    }
    li:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }
    li:is(:hover, :focus-within) h2 {
        color: #23262d;
    }
</style>
