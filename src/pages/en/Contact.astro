---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);
---

<Layout title="Projects">
    <Header />
    <section>
        <h1>{translation("contact.title")}</h1>
        <ul>
            <li>
                <div>
                    <svg
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        width="50"
                        height="50"
                        fill="none"
                        ><style>
                            @keyframes phone {
                                0%,
                                to {
                                    transform: rotate(0deg);
                                    transform-origin: 0 100%;
                                }
                                10%,
                                90% {
                                    transform: rotate(2deg);
                                }
                                20%,
                                40%,
                                60% {
                                    transform: rotate(-4deg);
                                }
                                30%,
                                50%,
                                70% {
                                    transform: rotate(4deg);
                                }
                                80% {
                                    transform: rotate(-2deg);
                                }
                            }
                        </style><path
                            fill="#0A0A30"
                            d="M15.758 19a10.761 10.761 0 01-7.603-3.162A10.805 10.805 0 015 8.22c0-.854.339-1.673.941-2.277A3.21 3.21 0 018.214 5c.18-.001.36.015.537.05.172.024.34.067.503.125a.699.699 0 01.455.525l.957 4.2a.7.7 0 01-.182.644c-.09.098-.098.105-.957.553a6.93 6.93 0 003.402 3.423c.454-.868.461-.875.559-.966a.699.699 0 01.643-.182l4.191.959a.699.699 0 01.503.455A3.046 3.046 0 0119 15.829a3.223 3.223 0 01-.968 2.255 3.21 3.21 0 01-2.274.916zM8.215 6.4a1.822 1.822 0 00-1.817 1.82 9.396 9.396 0 002.744 6.63 9.36 9.36 0 006.617 2.75 1.821 1.821 0 001.817-1.82v-.231l-3.242-.75-.202.386c-.315.609-.545 1.05-1.132.812a8.276 8.276 0 01-5.016-5.047c-.251-.546.224-.798.824-1.113l.385-.189L8.444 6.4h-.23z"
                            style="animation:phone 1.5s cubic-bezier(1,.01,.75,2.17) both infinite"
                        ></path></svg
                    >
                </div>
                <a href="https://wa.me/+59892371223" target="_blank"
                    >{translation("contact.whatsapp")}</a
                >
            </li>
            <li>
                <div>
                    <svg
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        width="50"
                        height="50"
                        fill="none"
                        ><style>
                            @keyframes open {
                                0% {
                                    transform: translateX(10px) scale(0);
                                    transform-origin: 50% 100%;
                                }
                                to {
                                    transform: scale(1);
                                    transform-origin: 50% 100%;
                                }
                            }
                        </style><rect
                            width="12"
                            height="10"
                            x="6"
                            y="8.804"
                            stroke="#0A0A30"
                            stroke-width="1.5"
                            rx="2"></rect><path
                            fill="transparent"
                            stroke="#265BFF"
                            stroke-width="1.5"
                            d="M9 6.196a1 1 0 011-1h4a1 1 0 011 1v5.082a1 1 0 01-.37.777l-2.006 1.628a1 1 0 01-1.263-.002l-1.993-1.626A1 1 0 019 11.28V6.196z"
                            style="animation:open 2s cubic-bezier(.49,.39,.35,1.06) both infinite"
                        ></path><path
                            stroke="#0A0A30"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M8.465 11.413l3.573 2.783 3.497-2.783"
                        ></path></svg
                    >
                </div>
                <a href="mailto:carlosngonzalez0@gmail.com"
                    >{translation("contact.email")}</a
                >
            </li>
            <li>
                <div>
                    <svg
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        width="50"
                        height="50"
                        fill="none"
                        ><style>
                            @keyframes instagram {
                                0%,
                                40% {
                                    transform: scale(0.4);
                                }
                                20% {
                                    transform: scale(0.6);
                                }
                                60% {
                                    transform: scale(0.8);
                                }
                                to {
                                    transform: scale(1);
                                }
                            }
                        </style><rect
                            width="14.5"
                            height="14.5"
                            x="4.75"
                            y="4.75"
                            stroke="#0A0A30"
                            stroke-width="1.5"
                            rx="4.25"></rect><rect
                            width="6"
                            height="6"
                            x="9"
                            y="9"
                            stroke="#265BFF"
                            stroke-width="1.5"
                            rx="3"
                            style="animation:instagram 2s linear infinite both;transform-origin:center center"
                        ></rect><circle cx="16" cy="8" r="1" fill="#0A0A30"
                        ></circle></svg
                    >
                </div>
                <a href="https://www.instagram.com/carlosn.gonzalez29/"
                    >Instagram</a
                >
            </li>
            <li>
                <div>
                    <svg
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                        width="50"
                        height="50"
                        fill="none"
                        ><style>
                            @keyframes linkedin {
                                0% {
                                    transform: translateY(-4px);
                                    animation-timing-function: ease-in;
                                    opacity: 1;
                                }
                                24% {
                                    opacity: 1;
                                }
                                40%,
                                65% {
                                    transform: translateY(-4px);
                                    animation-timing-function: ease-in;
                                }
                                82% {
                                    transform: translateY(-3px);
                                    animation-timing-function: ease-in;
                                }
                                93% {
                                    transform: translateY(-1px);
                                    animation-timing-function: ease-in;
                                }
                                25%,
                                55%,
                                75%,
                                87% {
                                    transform: translateY(0);
                                    animation-timing-function: ease-out;
                                }
                                to {
                                    transform: translateY(0);
                                    animation-timing-function: ease-out;
                                    opacity: 1;
                                }
                            }
                        </style><path
                            fill="#265BFF"
                            d="M7.361 7.111a1.556 1.556 0 110-3.111 1.556 1.556 0 010 3.111z"
                            style="animation:linkedin 2s infinite both cubic-bezier(1,-.08,0,1.12)"
                        ></path><path
                            fill="#0A0A30"
                            d="M10.473 18h3.11v-5.25a1.411 1.411 0 011.364-1.512 1.762 1.762 0 011.748 1.512V18h3.11v-5.639a3.5 3.5 0 00-3.48-3.51 3.592 3.592 0 00-2.741 1.371V8.667h-3.111V18zm-4.667 0h3.111V8.667H5.806V18z"
                        ></path></svg
                    >
                </div>
                <a href="https://www.linkedin.com/in/carlos-gonzalez-/"
                    >Linkedin</a
                >
            </li>
        </ul>
    </section>
    <Footer />

    <style>
        section {
            display: flex;
            justify-content: space-evenly;
            margin: 0 calc(100% - 88%);
            background-color: rgb(30, 27, 31, 0.8);
            border-radius: 8px;
            color: rgb(178, 179, 180);
            height: 64vh;
            flex-direction: column;
            padding: 0 2rem;
            box-shadow: inset 0 0 30px rgba(255, 255, 255, 0.1);
        }
        h1 {
            font-size: 3rem;
        }
        div {
            border-radius: 50%;
            background-color: rgb(178, 179, 180);
            margin-right: 2rem;
        }

        li {
            margin-top: 2rem;
            list-style: none;
            display: flex;
            align-items: center;
            color: rgb(178, 179, 180);
            background-image: none;
            background-size: 400%;
            border-radius: 2rem 1.5rem 1.5rem 2rem;
            background-position: 50%;
            transition: background-position 2s cubic-bezier(0.22, 1, 0.36, 1);
            box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        }
        a {
            color: rgb(178, 179, 180);
            font-size: 1.5rem;
            text-decoration: none;
            list-style: none;
        }
        a:hover {
            transition: 0.5s;
            color: brown;
        }
        svg:hover {
            transform: scale(1.1);
            transition: transform 1s cubic-bezier(0.22, 1, 0.36, 1);
        }
    </style>
</Layout>
