---
import { languageList } from "src/i18n/ui";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translation = useTranslations(lang);
---

<section>
    <aside>
        <img
            src="https://miro.medium.com/v2/resize:fit:1400/1*nLbfO_PdTSpeCdZQuUr8RQ.png"
            alt="Foto Perfil"
        />
        <a href={`/${lang}/`} target="_blank" rel="noopener noreferrer">
            <span class=""> Carlos Gonzalez ðŸš€</span>
        </a>
    </aside>
    <aside>
        <ul>
            <a href={`/${lang}/`}>{translation("header.about")}</a>
            <a href={`/${lang}/Proyects`}>{translation("header.proyects")}</a>
            <a href={`/${lang}/Contact`}>{translation("header.contact")}</a>
        </ul>
    </aside>
    <aside>
        <img
            src="https://miro.medium.com/v2/resize:fit:1400/1*nLbfO_PdTSpeCdZQuUr8RQ.png"
            alt="modo oscuro (TODO)"
        />
        {
            Object.entries(languageList).map(([key, value]) => (
                <a href={`/${key}/`}>{value}</a>
            ))
        }
    </aside>
</section>

<style>
    section {
        display: flex;
        align-items: center;
        font-size: 1.5rem;
        justify-content: space-around;
        padding: 1.5rem;
        position: fixed;
        z-index: 10;
        width: 100%;
        color: #dad7d7;
        background: linear-gradient(
            rgba(30, 51, 29, 66%),
            rgba(20, 112, 13, 33%)
        );
    }
    section:hover {
        transition-duration: 1s;
        background-color: rgb(1, 58, 8);
    }
    aside {
        display: flex;
        align-items: center;
        column-gap: 1.5rem;
        row-gap: 3rem;
    }
    img {
        width: 3rem;
        border-radius: 50%;
    }
    a {
        padding: 0 2rem;
        color: #dad7d7;
        text-decoration: none;
    }

    a:hover {
        transition: 0.5s;
        color: brown;
    }
</style>
